{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>particify/dev/devops/renovate-dependency-bot//presets/default"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "ng-packagr",
        "typescript",
        "@angular/{/,}**",
        "@angular-devkit/{/,}**"
      ],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "matchPackageNames": [
        "ng-packagr",
        "typescript",
        "@angular/{/,}**",
        "@angular-devkit/{/,}**"
      ],
      "minimumReleaseAge": "0 days"
    },
    {
      "extends": ["schedule:monthly"],
      "matchPackageNames": ["eslint-plugin-jsdoc"]
    },
    {
      "groupName": "angular",
      "matchPackageNames": [
        "ng-packagr",
        "@angular/{/,}**",
        "@angular-devkit/{/,}**"
      ]
    },
    {
      "groupName": "apollo/graphql",
      "matchPackageNames": [
        "apollo-angular",
        "graphql",
        "@apollo/{/,}**",
        "@graphql-codegen/{/,}**"
      ]
    },
    {
      "groupName": "eslint",
      "matchPackageNames": [
        "eslint",
        "typescript-eslint",
        "@angular-eslint/{/,}**",
        "@eslint/{/,}**",
        "@typescript-eslint/{/,}**",
        "eslint-{/,}**"
      ]
    },
    {
      "groupName": "stomp",
      "matchPackageNames": ["@stomp/{/,}**"]
    }
  ]
}

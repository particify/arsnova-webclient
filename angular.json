{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "arsnova-webclient": {
      "root": "",
      "sourceRoot": "src",
      "projectType": "application",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "outputPath": "dist",
            "index": "src/index.html",
            "browser": "src/main.ts",
            "tsConfig": "src/tsconfig.app.json",
            "polyfills": ["zone.js"],
            "assets": [
              "src/assets",
              "src/favicon.ico",
              "src/manifest.webmanifest",
              "src/robots.txt"
            ],
            "styles": ["src/fonts.scss", "src/styles.scss"],
            "stylePreprocessorOptions": {
              "includePaths": ["src/app/core/theme/light-theme/default/"]
            },
            "scripts": [],
            "extractLicenses": false,
            "sourceMap": true,
            "optimization": false,
            "namedChunks": true
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "namedChunks": false,
              "extractLicenses": true,
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "serviceWorker": "ngsw-config.json"
            }
          },
          "defaultConfiguration": ""
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "buildTarget": "arsnova-webclient:build",
            "host": "127.0.0.1"
          },
          "configurations": {
            "production": {
              "buildTarget": "arsnova-webclient:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "buildTarget": "arsnova-webclient:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "karmaConfig": "./karma.conf.js",
            "tsConfig": "src/tsconfig.spec.json",
            "polyfills": ["zone.js", "zone.js/testing"],
            "scripts": [],
            "inlineStyleLanguage": "scss",
            "styles": ["src/testing/fonts.scss", "src/styles.scss"],
            "stylePreprocessorOptions": {
              "includePaths": ["src/app/core/theme/light-theme/default/"]
            },
            "assets": [
              "src/assets",
              "src/favicon.ico",
              "src/manifest.webmanifest"
            ]
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": ["src/**/*.ts", "src/**/*.html"]
          }
        },
        "storybook": {
          "builder": "@storybook/angular:start-storybook",
          "options": {
            "configDir": ".storybook",
            "browserTarget": "arsnova-webclient:build",
            "compodoc": false,
            "port": 6006,
            "styles": [
              "src/testing/fonts.scss",
              ".storybook/custom-styles.scss"
            ]
          }
        },
        "build-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "configDir": ".storybook",
            "browserTarget": "arsnova-webclient:build",
            "compodoc": false,
            "outputDir": "dist/storybook/arsnova-webclient",
            "styles": [
              "src/testing/fonts.scss",
              ".storybook/custom-styles.scss"
            ]
          }
        }
      }
    },
    "extension-point": {
      "projectType": "library",
      "root": "projects/extension-point",
      "sourceRoot": "projects/extension-point/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "tsConfig": "projects/extension-point/tsconfig.lib.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/extension-point/tsconfig.lib.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "projects/extension-point/tsconfig.spec.json",
            "karmaConfig": "./karma.conf.js",
            "polyfills": ["zone.js", "zone.js/testing"]
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/extension-point/**/*.ts",
              "projects/extension-point/**/*.html"
            ]
          }
        }
      }
    }
  },
  "schematics": {
    "@schematics/angular:component": {
      "prefix": "app",
      "style": "scss"
    },
    "@schematics/angular:directive": {
      "prefix": "app"
    }
  },
  "cli": {
    "packageManager": "yarn",
    "analytics": false
  }
}
